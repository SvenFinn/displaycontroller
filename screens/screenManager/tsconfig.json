{
    "compilerOptions": {
        "target": "ES2023",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "outDir": "./dist",
        "paths": {
            "@shared/files": [
                "../types/file"
            ],
            "@shared/screens": [
                "./types"
            ],
            "@shared/screens/*": [
                "./types/*",
            ],
            "@shared/ranges": [
                "../../ranges/types"
            ],
            "@shared/ranges/*": [
                "../../ranges/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
}